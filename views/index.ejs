<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>To-Do_App</title>
    <style>
        .todo{
            margin-top: 12%;
            margin-left: auto;
            margin-right: auto;
            align-content: center;
            width: max-content;
            border-radius: 5px;
            width: 70%;
        }
        .box{
            background-color: rgb(218, 218, 218);
            z-index: 0;
            --bs-gutter-x: 1.5rem;
            --bs-gutter-y: 0;
            display: flex;
            flex-wrap: wrap;
            position: relative;
        }
        
        .list{
            flex: 0 0 auto;
            width: 50%;
            box-shadow: 5px 0px 10px grey;
        }
        .list > h3{
            padding-left: 15px;
            font-size: 30px;
            text-align: left;
            margin-bottom: 15px;
        }
        .inputArea{
            flex: 0 0 auto;
            z-index: -1;
            margin: 15px 0px 15px 25px;
        
        }
        
        .list > ul{
            list-style-type: none;
            padding-left: 10px;
            padding-right: 10px;
            text-align: left;
        }
        .listItem{
            display: flex;
            flex-direction: row;
            align-items: center;
            width: 100%;
            height: auto;
            border-bottom: 1px solid black;
        }
        .listContent{
            display:flex;
            font-size: 18px;
            padding-right: 10px;
            flex-direction: row;
            align-items: self-start;
            width: 70%;
            margin-top: 1em;
            margin-bottom: 1em;
        }
        .check{
            display: flex;
            flex-direction: row;
            width: 20px;
            height: 20px;
            border-radius: 50%;
            border: 1px solid black;
            outline: none;
            
        }
        .deleteBtn{
            display: flex;
            flex-direction: column;
            width: 20px;
            height: 20px;
            right: 0;
            border: none;
            outline: none;
            color: rgb(251, 12, 12);
            background-color: transparent;
            margin-left: 10px;
            
        }
    @media only screen and (max-width: 600px){
        .box{
            width: 100%;
        }
        .list{
            width: 100%;
            box-shadow: 0px 5px 10px grey;
        }
        .inputArea{
            width: 100%;
        }
        .todo{
            margin-top: 0%;
        }

    }
    .navbar{
        overflow: hidden;
        background-color: #333;
        position: fixed;
        top: 0;
        width: 100%;
        height: 40px;
        left: 0;
    }
    .navbar a{
        float: left;
        display: block;
        color: #f2f2f2;
        text-align: center;
        padding: 10px 12px;
        text-decoration: none;
        font-size: 17px;
    }
    .t{
        text-align: center;
    }
    .imagebox{
        width: 50px;
        height: 50px;
        margin-right: 10px;
    }
    form > input{
        margin-top: 10px;
    }
    .inputBox{
        height: 30px;
        border-radius: 5px;
        border: 1px solid black;
        outline: none;
        padding-left: 10px;
    }
    .imageFile{
        width: 100%;
        height: 30px;
        border-radius: 5px;
        border: 1px solid black;
        outline: none;
        padding-left: 10px;
    }
    .SubmitBtn{
        width: 70px;
        height: 30px;
        background-color: rgb(10, 141, 255);
        color: #ffffff;
        border: none;
        border-radius: 5px;
        padding-left: 10px;
        margin-top: 10px;
    }
    </style>
</head>
<body>
    
        <div class="navbar">
            <a href="/">Home</a>
            <a href="/todo">ToDo</a>
            <a href="/logout"> LOGOUT </a>
        </div>
    
<div class="todo"> 
        <h1 class="t">To Do List Application</h1>
    <div class="box">
         <div class="list" id="listAA"> 
            <h3 class="t">TASK LIST</h3>
            <ul id="todoList">
                <% data.forEach(function(item) { %>
                    <li class="listItem" id=<%= item.id %> >
                         <% if(item.checked === true) { %>
                            <del class="listContent"><%= item.item %></del>
                            <img src="<%= item.image %>" alt="q" class="imagebox">
                            <input class="check" type="checkbox" checked >
                        <% }else{ %>
                            <p class="listContent"><%= item.item %></p>
                            <img src="<%= item.image %>" alt="<%= item.image %>" class="imagebox">
                            <input class="check" type="checkbox" >
                        <% } %>
                        <img src="icons8-delete-24.png" alt="X" class="deleteBtn"/>
                    </li>
                  <% }); %>
                  
                <!-- <li class="listItem">
                    <p class="listContent">hello</p>
                    <input class="check" type="checkbox" checked>
                    <button class="deleteBtn" >X</button>
                </li> -->
            </ul>
        </div>
         <div class="inputArea">
            <span>ADD TASK</span>
            <form action="/add" method="post" enctype="multipart/form-data">
                <input type="text" class="inputBox" placeholder="I need to..." id="inputArea" required name="inputText"><br/>
                <input type="file" name="imageFile" class="fileBox" required data-max-size="32154"><br/>
                <input type="submit" class="SubmitBtn">
            </form>
        </div>
    </div>
</div>
</body>
<script src="/script.js"></script>
</html>